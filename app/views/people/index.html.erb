<h1>Listing people</h1>

<%= link_to 'New people', new_person_path %>

<%= nav_bar do %>
    <%= menu_item "Home", root_path %>
    <%= menu_item "People", people_path %>
<% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>

    <th colspan="3"></th>
  </tr>

  <% @people.each do |person| %>
      <tr>
        <td><%= person.title %></td>
        <td><%= person.text %></td>

        <td><%= link_to 'Show', person_path(person) %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', people_path(person),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>