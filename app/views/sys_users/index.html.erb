<h1>Listing users</h1>

<table>
  <thead>
  <tr>
    <th>userName</th>
    <th>password</th>
    <th>Mobile</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <% @sysUsers.each do |user| %>
      <tr>
        <td><%= user.userName %></td>
        <td><%= user.password %></td>
        <td><%= user.mobile %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_sys_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

<br>

<%= link_to 'New User', new_sys_user_path %>